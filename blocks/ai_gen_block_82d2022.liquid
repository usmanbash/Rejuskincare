    },
    {
      "type": "header",
      "content": "Bullet 3"
    },
    {
      "type": "image_picker",
      "id": "bullet_3_icon",
      "label": "Icon"
    },
    {
      "type": "text",
      "id": "bullet_3_text",
      "label": "Text",
      "default": "Enhanced radiance and glow"
