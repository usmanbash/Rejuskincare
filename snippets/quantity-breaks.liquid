                {% capture amount_saved_money %}{{ option_4_price_difference | money_without_trailing_zeros }}{% endcapture %}
                {% capture amount_saved_rounded_money %}{{ option_4_price_difference_rounded | money_without_trailing_zeros }}{% endcapture %}
                {{ block.settings.option_4_caption | replace: '[amount_saved]', amount_saved_money | replace: '[amount_saved_rounded]', amount_saved_rounded_money }}
              </span>
            {% endif %}
          </div>
          <div class="quantity-break__right variant-money-change">
            <span class="quantity-break__price variant-price-update" data-text="[price]">
              {{ option_4_price | money_without_trailing_zeros }}
            </span>
            <span class="quantity-break__compare-price variant-price-update" data-text="[compare_price]">{% if option_4_compare_price > option_4_price %}{{ option_4_compare_price | money_without_trailing_zeros }}{% endif %}</span>
          </div>
        </div>
        {% if product.has_only_default_variant == false and block.settings.enable_variant_selectors %}
          {% if block.settings.option_4_quantity != 1 or block.settings.enable_variant_selectors_on_quantity_of_1 %}
            <div class="quantity-break__variants" id='option-4-variants-{{ section.id }}'>
              {% assign has_variants = true %}
              {% for selectorItem in (1..block.settings.option_4_quantity) %}
                <div
                  class="quantity-break__selector-item"
                  data-select-index="{{ forloop.index0 }}"
                  data-selected-id="{{ product.selected_or_first_available_variant.id }}"
                >
                  <span class="quantity-break__selector-item__number">#{{ selectorItem }}</span>
                  {%- for option in product.options_with_values -%}
                    <div class="select select--small">
                      <select
                        class="quantity-break__variant-select select__select variant-dropdown"
                        name="options[{{ option.name | escape }}]"
                        data-product-id="{{ product.selected_or_first_available_variant.id }}"
                      >
                        {% for value in option.values %}
                          {%- liquid
                             assign option_class = ''
                             assign option_disabled = true
                             assign option_exists = false
                         
                             for option1_name in variants_option1_arr
                               case option.position
                                 when 1
                                   if variants_option1_arr[forloop.index0] == value
                                     assign option_exists = true
                                     if variants_available_arr[forloop.index0]
                                       assign option_disabled = false
                                     endif
                                   endif
                                 when 2
                                   if option1_name == product.selected_or_first_available_variant.option1 and variants_option2_arr[forloop.index0] == value
                                     assign option_exists = true
                                     if variants_available_arr[forloop.index0]
                                       assign option_disabled = false
                                     endif
                                   endif
                                 when 3
                                   if option1_name == product.selected_or_first_available_variant.option1 and variants_option2_arr[forloop.index0] == product.selected_or_first_available_variant.option2 and variants_option3_arr[forloop.index0] == value
                                     assign option_exists = true
                                     if variants_available_arr[forloop.index0]
                                       assign option_disabled = false
                                     endif
                                   endif
                               endcase
                             endfor
                         
                             if option_exists == false
                               assign option_class = 'non-existent'
                             elsif option_disabled == true
                               assign option_class = 'unavailable'
                             endif
                          -%}
                          <option
                            value="{{ value | escape }}"
                            {% if option.selected_value == value %}
                              selected="selected"
                            {% endif %}
                            class="{{ option_class }}"
                          >
                            {% if option_disabled -%}
                              {{- 'products.product.value_unavailable' | t: option_value: value -}}
                            {%- else -%}
                              {{- value -}}
                            {%- endif %}
                          </option>
                        {% endfor %}
                      </select>
                      {% render 'icon-caret' %}
                    </div>
                  {%- endfor -%}
                </div>
              {% endfor %}
            </div>
          {% endif %}
        {% endif %}
      </label>
    {% endif %}
    </div>
  </div>

  <script data-has-variants="{{ has_variants }}" type="application/json">
    {{ product.variants | json }}
  </script>
</quantity-breaks>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Wait a bit for all elements to be fully loaded
  setTimeout(function() {
    const quantityBreaks = document.getElementById('quantity-breaks-{{ section.id }}');
    if (!quantityBreaks) {
      console.log('Quantity breaks container not found');
      return;
    }

    const radioInputs = quantityBreaks.querySelectorAll('input[name="quantity"]');
    const atcButton = document.getElementById('ProductSubmitButton-{{ section.id }}');
    const stickyAtcButton = document.getElementById('StickyAtcSubmitButton-{{ section.id }}');
    
    console.log('Quantity breaks initialized:', {
      radioInputs: radioInputs.length,
      atcButton: !!atcButton,
      stickyAtcButton: !!stickyAtcButton
    });
    
    // Function to update ATC button price
    function updateAtcPrice(selectedRadio) {
      console.log('Updating price for radio:', selectedRadio.id);
      
      // Find the associated label (sibling element)
      const label = document.querySelector(`label[for="${selectedRadio.id}"]`);
      if (!label) {
        console.log('Label not found for radio:', selectedRadio.id);
        return;
      }
      
      const priceElement = label.querySelector('.quantity-break__price');
      if (!priceElement) {
        console.log('Price element not found in label');
        return;
      }
      
      const price = priceElement.textContent.trim();
      console.log('Updating ATC price to:', price);
      
      // Update main ATC button price - try multiple selectors
      if (atcButton) {
        let mainAtcPrice = atcButton.querySelector('.main-atc-price');
        if (!mainAtcPrice) {
          mainAtcPrice = atcButton.querySelector('#main-atc-price-{{ section.id }}');
        }
        if (!mainAtcPrice) {
          mainAtcPrice = atcButton.querySelector('[class*="atc-price"]');
        }
        
        if (mainAtcPrice) {
          mainAtcPrice.textContent = ' • ' + price;
          console.log('Updated main ATC price to:', price);
        } else {
          // If price element doesn't exist, create it or update label text
          console.log('Main ATC price element not found, trying to create or update label');
          const labelContainer = atcButton.querySelector('.main-atc__label');
          if (labelContainer) {
            // Try to create the price element
            let priceSpan = document.createElement('span');
            priceSpan.id = 'main-atc-price-{{ section.id }}';
            priceSpan.className = 'main-atc-price';
            priceSpan.textContent = ' • ' + price;
            
            // Insert after the label text
            const labelText = labelContainer.querySelector('.main-atc__label__text');
            if (labelText) {
              // Insert after the label text element
              if (labelText.nextSibling) {
                labelText.parentNode.insertBefore(priceSpan, labelText.nextSibling);
              } else {
                labelText.parentNode.appendChild(priceSpan);
              }
              console.log('Created and inserted price element:', price);
            } else {
              // Fallback: append to label text
              const labelText = atcButton.querySelector('.main-atc__label__text');
              if (labelText) {
                const currentText = labelText.textContent.trim();
                labelText.textContent = currentText + ' • ' + price;
                console.log('Updated label text with price:', price);
              } else {
                console.log('Could not find label text element either');
              }
            }
          } else {
            console.log('Could not find label container');
          }
        }
      } else {
        console.log('ATC button not found');
      }
      
      // Update sticky ATC button price
      if (stickyAtcButton) {
        // First try to update the separate price container
        const stickyPriceContainer = document.getElementById('sticky-atc-separate-price-{{ section.id }}');
        if (stickyPriceContainer) {
          // Update the price container content
          stickyPriceContainer.innerHTML = price;
          console.log('Updated sticky ATC price container to:', price);
        }
        
        // Also try to update the button price element
        let stickyAtcPrice = stickyAtcButton.querySelector('#sticky-atc-price-{{ section.id }}');
        if (!stickyAtcPrice) {
          stickyAtcPrice = stickyAtcButton.querySelector('[id*="sticky-atc-price"]');
        }
        
        if (stickyAtcPrice) {
          stickyAtcPrice.textContent = ' • ' + price;
          console.log('Updated sticky ATC button price to:', price);
        } else {
          // Create sticky ATC price element if it doesn't exist
          console.log('Sticky ATC button price element not found, trying to create it');
          const stickyLabel = stickyAtcButton.querySelector('.sticky-atc__label');
          if (stickyLabel) {
            let priceSpan = document.createElement('span');
            priceSpan.id = 'sticky-atc-price-{{ section.id }}';
            priceSpan.textContent = ' • ' + price;
            
            // Insert after the label text
            const labelText = stickyLabel.querySelector('.sticky-atc__label__text');
            if (labelText) {
              // Insert after the label text element
              if (labelText.nextSibling) {
                labelText.parentNode.insertBefore(priceSpan, labelText.nextSibling);
              } else {
                labelText.parentNode.appendChild(priceSpan);
              }
              console.log('Created and inserted sticky ATC price element:', price);
            } else {
              console.log('Could not find sticky label text element');
            }
          } else {
            console.log('Could not find sticky label container');
          }
        }
      } else {
        console.log('Sticky ATC button not found');
      }
    }
    
    // Handle radio button changes
    radioInputs.forEach(radio => {
      radio.addEventListener('change', function() {
        console.log('Radio changed:', this.id, this.checked);
        if (this.checked) {
          updateAtcPrice(this);
        }
      });
    });
    
    // Update price on page load for preselected radio
    const preselectedRadio = quantityBreaks.querySelector('input[name="quantity"]:checked');
    if (preselectedRadio) {
      console.log('Found preselected radio:', preselectedRadio.id);
      updateAtcPrice(preselectedRadio);
    } else {
      console.log('No preselected radio found');
    }
  }, 100); // Small delay to ensure everything is loaded
});
</script>
