{% if amount_left < 0 %}
  {% assign amount_left = 0 %}
{% endif %}
{% assign percent = cart_total | divided_by: free_shipping_goal | times: 100 %}
{% if percent > 100 %}
  {% assign percent = 100 %}
{% endif %}

