{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
{%- endstyle -%}

<section class="comparison-table-section section-{{ section.id }}-padding" style="background-color: {{ section.settings.section_bg }};">
  <div class="page-width section-{{ section.id }}-padding">
    <h2
                class="rich-text__heading rte text-center inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ section.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
              >
                {{ section.settings.heading }}
              </h2>
    <div class="comparison-table">
      <table>
        <!-- Header Row -->
        <tr class="header-row">
          {% for i in (1..3) %}
            {% assign image_id = "col" | append: i | append: "_image" %}
            {% assign title_id = "col" | append: i | append: "_title" %}
            {% assign img = section.settings[image_id] %}
            {% assign title = section.settings[title_id] %}
            {% assign header_image_width = 160 %}

            <th class="col-{{ i }}{% if i == 2 %} middle-col{% endif %}"
              style="{% if i == 2 %}background-color: {{ section.settings.middle_col_bg }};{% endif %}">
              {% if img != blank %}
                {% assign header_image_height = header_image_width %}
                {% if img.aspect_ratio %}
                  {% assign header_image_height = header_image_width | divided_by: img.aspect_ratio | round: 0 %}
                {% endif %}
                <img
                  src="{{ img | image_url: width: header_image_width }}"
                  width="{{ header_image_width }}"
                  height="{{ header_image_height }}"
                  alt="Column {{ i }}"
                  class="header-image"
                  loading="lazy"
                >
              {% endif %}
              {% if title != blank %}
                <p class="header-text">{{ title }}</p>
              {% endif %}
            </th>
          {% endfor %}
        </tr>

        <!-- Table Body Rows -->
        {% for row in (1..6) %}
          <tr>
            {% for i in (1..3) %}
              {% assign text_id = "row" | append: row | append: "_col" | append: i %}
              {% assign text_value = section.settings[text_id] %}
              <td class="col-{{ i }}{% if i == 2 %} middle-col{% endif %}"
                style="{% if i == 2 %}background-color: {{ section.settings.middle_col_bg }};{% endif %}">
                <div class="cell-content">
                  {% if i == 2 and section.settings.middle_icon != blank %}
                    {% assign middle_icon_display_width = 24 %}
                    {% assign middle_icon_display_height = middle_icon_display_width %}
                    {% if section.settings.middle_icon.aspect_ratio %}
                      {% assign middle_icon_display_height = middle_icon_display_width | divided_by: section.settings.middle_icon.aspect_ratio | round: 0 %}
                    {% endif %}
                    {% assign middle_icon_src_width = middle_icon_display_width | times: 2 %}
                    <img
                      src="{{ section.settings.middle_icon | image_url: width: middle_icon_src_width }}"
                      width="{{ middle_icon_display_width }}"
                      height="{{ middle_icon_display_height }}"
                      alt="icon"
                      class="cell-icon"
                      loading="lazy"
                    >
                  {% endif %}
                  <span class="cell-text">{{ text_value }}</span>
                </div>
              </td>
            {% endfor %}
          </tr>
        {% endfor %}
      </table>
    </div>
    <div class="button-icon-block text-center">
    {%- for block in section.blocks -%}
              {% case block.type %}
    {%- when 'button' -%}
                  {%- if block.settings.button_label != blank -%}
                    <a
                      {% if block.settings.button_link == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.button_link }}"
                      {% endif %}
                      class="button {% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.button_label | escape }} {% render 'icon-caret-right' %}
                    </a>
                  {%- endif -%}
                  {%  when 'icon-text' %}
                  <div class ="three-icon-text">
                      <div class="text-icon-block border-right">
                        {% if block.settings.image_1 != blank %}
                        <div class="icon-block">
                          {% assign icon_one_display_width = 40 %}
                          {% assign icon_one_display_height = icon_one_display_width %}
                          {% if block.settings.image_1.aspect_ratio %}
                            {% assign icon_one_display_height = icon_one_display_width | divided_by: block.settings.image_1.aspect_ratio | round: 0 %}
                          {% endif %}
                          <img
                            src="{{ block.settings.image_1 | image_url: width: 80 }}"
                            width="{{ icon_one_display_width }}"
                            height="{{ icon_one_display_height }}"
                            class="icon"
                            loading="lazy"
                            alt="{{ block.settings.text_1 | strip_html | escape }}"
                          >
                        </div>
                    {% endif %}
                        <div class="text-content">
                          {{ block.settings.text_1 }}
                        </div>
                      </div>
                      <div class="text-icon-block border-right">
                        {% if block.settings.image_2 != blank %}
                        <div class="icon-block">
                          {% assign icon_two_display_width = 40 %}
                          {% assign icon_two_display_height = icon_two_display_width %}
                          {% if block.settings.image_2.aspect_ratio %}
                            {% assign icon_two_display_height = icon_two_display_width | divided_by: block.settings.image_2.aspect_ratio | round: 0 %}
                          {% endif %}
                          <img
                            src="{{ block.settings.image_2 | image_url: width: 80 }}"
                            width="{{ icon_two_display_width }}"
                            height="{{ icon_two_display_height }}"
                            class="icon"
                            loading="lazy"
                            alt="{{ block.settings.text_2 | strip_html | escape }}"
                          >
                        </div>
                        {% endif %}
                        <div class="text-content ">
                          {{ block.settings.text_2 }}
                        </div>
                      </div>
                      <div class="text-icon-block">
                        {% if block.settings.image_3 != blank %}
                        <div class="icon-block">
                          {% assign icon_three_display_width = 40 %}
                          {% assign icon_three_display_height = icon_three_display_width %}
                          {% if block.settings.image_3.aspect_ratio %}
                            {% assign icon_three_display_height = icon_three_display_width | divided_by: block.settings.image_3.aspect_ratio | round: 0 %}
                          {% endif %}
                          <img
                            src="{{ block.settings.image_3 | image_url: width: 80 }}"
                            width="{{ icon_three_display_width }}"
                            height="{{ icon_three_display_height }}"
                            class="icon"
                            loading="lazy"
                            alt="{{ block.settings.text_3 | strip_html | escape }}"
                          >
                        </div>
                        {% endif %}
                        <div class="text-content">
                          {{ block.settings.text_3 }}
                        </div>
                      </div>
                  </div> 
                {% endcase %}      
            {% endfor %}
  </div>
  </div>
</section>

<style>
.comparison-table-section h2{
    max-width:600px;
    margin:auto;
}
.comparison-table table {
  width: 100%;
  border-collapse: collapse;
  text-align: center;
  max-width: 900px;
  margin: 40px auto;
}

.comparison-table {
  overflow: hidden;
}

.comparison-table th,
.comparison-table td {
  border-top: 1px solid #DBD3C8;
  padding: 16px;
  vertical-align: middle;
  text-align: left;
}
.comparison-table tr:first-child th {
  border-top: 0;
}
.comparison-table .header-row th {
  font-weight: 600;
  font-size: 16px;
  text-align: center;
}
.comparison-table .header-image {
  max-width: 80px;
    margin-bottom: 8px;
    object-fit: cover;
    max-height: 130px;
}
.comparison-table .header-text {
  margin: 0;
  font-weight: 500;
}
.comparison-table .cell-content {
  display: flex;
  align-items: center;
  gap: 8px;
  justify-content: flex-start;
  font-weight: 300;
}
.icon-block img{
  width: 20px;
  height: 20px;
  object-fit: contain;
}
.comparison-table .cell-text {
  display: inline-block;
  font-size: 16px;
  line-height: 1.45;
}
.comparison-table .middle-col {
  font-weight: 500;
  box-shadow: 0 12px 32px rgba(84, 66, 48, 0.08);
  border: 1px solid rgba(84, 66, 48, 0.08);
}
.comparison-table .middle-col .cell-content {
  justify-content: center;
}
.comparison-table .cell-icon {
  width: 20px;
  height: 20px;
  margin-right: 6px;
  vertical-align: middle;
}
.comparison-table .col-1 {
  font-weight: 600;
  color: #3A2B20;
  max-width: 160px;
}
.comparison-table .col-3 {
  color: #6B655E;
}
.comparison-table tbody tr:nth-child(odd) .col-1 {
  background-color: rgba(247, 244, 237, 0.35);
}
.button-icon-block.text-center {
    display: flex;
    flex-direction: column;
    gap: 4px;
    max-width: 550px;
    margin: auto;
}
@media screen and (max-width: 749px) {
  .comparison-table {
    overflow-x: auto;
    padding-bottom: 8px;
  }
  .comparison-table table {
    min-width: 520px;
    margin: 24px auto 32px;
  }
  .comparison-table th,
  .comparison-table td {
    padding: 14px 12px;
    font-size: 14px;
  }
  .comparison-table .cell-text {
    font-size: 14px;
  }
  .comparison-table .header-image {
    max-width: 60px;
  }
  .comparison-table .col-1 {
    max-width: 140px;
  }
}
</style>

