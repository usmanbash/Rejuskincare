<script>
function initMulticolumnSlider(sectionEl) {
  const slider = sectionEl.querySelector('.multicolumn-list');
  const prevButton = sectionEl.querySelector('.slider-button--prev');
  const nextButton = sectionEl.querySelector('.slider-button--next');
  const counter = sectionEl.querySelector('.slider-counter');

  if (!slider) return;

  const slides = Array.from(new Set(slider.querySelectorAll('li')));

  let currentIndex = 0;
  if (counter) counter.textContent = `1 / ${slides.length}`;

  function updateButtons() {
    // Disable prev when on first slide
    if (prevButton) prevButton.toggleAttribute('disabled', currentIndex === 0);
    // Disable next when on last slide
    if (nextButton) nextButton.toggleAttribute('disabled', currentIndex === slides.length - 1);
  }

  function updateCounter() {
    if (!counter) return;
    counter.textContent = `${currentIndex + 1} / ${slides.length}`;
  }

  function scrollToSlide(index) {
    const slide = slides[index];
    if (!slide) return;
    slider.scrollTo({ left: slide.offsetLeft, behavior: 'smooth' });
  }

  // Track which slide is currently visible
  function detectCurrentSlide() {
    let closestIndex = 0;
    let closestDistance = Infinity;
    slides.forEach((slide, i) => {
      const distance = Math.abs(slide.offsetLeft - slider.scrollLeft);
      if (distance < closestDistance) {
        closestDistance = distance;
        closestIndex = i;
      }
    });
    currentIndex = closestIndex;
    updateButtons();
    updateCounter();
  }

  // Initialize states
  updateButtons();
  updateCounter();

  // Listen to events
  slider.addEventListener('scroll', () => {
    detectCurrentSlide();
  });

  prevButton?.addEventListener('click', () => {
    if (currentIndex > 0) {
      currentIndex--;
      scrollToSlide(currentIndex);
    }
  });

  nextButton?.addEventListener('click', () => {
    if (currentIndex < slides.length - 1) {
      currentIndex++;
      scrollToSlide(currentIndex);
    }
  });
}

// ðŸ§© Run on page load and section reloads
document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('section').forEach(initMulticolumnSlider);
});
document.addEventListener('shopify:section:load', (event) => {
  initMulticolumnSlider(event.target);
});
</script>




