<section
  id="application-tips-{{ section.id }}"
  class="application-tips-section {% unless section.settings.full_width %}page-width{% endunless %}"
>
  <style>
    #application-tips-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    }

    #application-tips-{{ section.id }} .badge {
      background: #E3DACF;
      color: #111;
      border-radius: 9999px;
      padding: 8px 16px;
      font-size: 14px;
      display: inline-block;
      margin: 0 auto 10px;
    }

    #application-tips-{{ section.id }} h2 {
      text-align: center;
      font-size: {{ section.settings.heading_font_size_desktop }}px;
      margin-bottom: 40px;
    }

    #application-tips-{{ section.id }} .tips-grid {
      display: grid;
      grid-template-columns: {{ section.settings.columns_desktop }};
      align-items: start;
      gap: 40px;
    }

    #application-tips-{{ section.id }} .image-column img {
      width: 100%;
      height: auto;
      border-radius: 10px;
      display: block;
    }

    #application-tips-{{ section.id }} .blocks-column {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    #application-tips-{{ section.id }} .tip-box {
      background: #fff;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 1px 4px rgba(0,0,0,0.05);
      transition: box-shadow 0.2s ease;
    }

    #application-tips-{{ section.id }} .tip-box:hover {
      box-shadow: 0 3px 10px rgba(0,0,0,0.08);
    }

    #application-tips-{{ section.id }} .tip-header {
      display: flex;
      align-items: center;
      gap: 12px;
      margin-bottom: 10px;
    }

    #application-tips-{{ section.id }} .tip-header img {
      width: 40px;
      height: 40px;
      object-fit: contain;
      border-radius: 6px;
    }

    #application-tips-{{ section.id }} .tip-header h3 {
      font-size: 18px;
      font-weight: 600;
      margin: 0;
    }

    #application-tips-{{ section.id }} .tip-content {
      font-size: 15px;
      line-height: 1.6;
      color: #333;
    }

    @media (max-width: 749px) {
      #application-tips-{{ section.id }} {
        padding-top: {{ section.settings.padding_top_mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      }

      #application-tips-{{ section.id }} h2 {
        font-size: {{ section.settings.heading_font_size_mobile }}px;
      }

      #application-tips-{{ section.id }} .tips-grid {
        grid-template-columns: {{ section.settings.columns_mobile }};
        gap: 24px;
      }

      #application-tips-{{ section.id }} .tip-header h3 {
        font-size: 16px;
      }
    }
  </style>

  <div class="badge">{{ section.settings.badge_text }}</div>
  <h2>{{ section.settings.title }}</h2>

  <div class="tips-grid">
    <div class="image-column">
      {% if section.settings.image %}
        <img
          src="{{ section.settings.image | image_url: width: 800 }}"
          alt="{{ section.settings.title }}"
          loading="lazy"
        >
      {% endif %}
    </div>

    <div class="blocks-column">
      {% for block in section.blocks %}
        <div class="tip-box" {{ block.shopify_attributes }}>
          <div class="tip-header">
            {% if block.settings.icon %}
              <img src="{{ block.settings.icon | image_url: width: 80 }}" alt="{{ block.settings.title }}">
            {% endif %}
            <h3>{{ block.settings.title }}</h3>
          </div>
          <div class="tip-content">
            {{ block.settings.content }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Application Tips",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width section",
      "default": false
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "Application Tips"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section title",
      "default": "How to Apply for Best Results"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Main image"
    },
    {
      "type": "text",
      "id": "columns_desktop",
      "label": "Desktop column layout (e.g. '1fr 1fr', '40% 60%')",
      "default": "1fr 1fr"
    },
    {
      "type": "text",
      "id": "columns_mobile",
      "label": "Mobile column layout (e.g. '1fr', '100%')",
      "default": "1fr"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 150,
      "step": 5,
      "label": "Padding top (desktop)",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 150,
      "step": 5,
      "label": "Padding bottom (desktop)",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 5,
      "label": "Padding top (mobile)",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 5,
      "label": "Padding bottom (mobile)",
      "default": 40
    },
    {
      "type": "range",
      "id": "heading_font_size_desktop",
      "min": 16,
      "max": 64,
      "step": 1,
      "label": "Heading font size (desktop)",
      "default": 32
    },
    {
      "type": "range",
      "id": "heading_font_size_mobile",
      "min": 14,
      "max": 40,
      "step": 1,
      "label": "Heading font size (mobile)",
      "default": 24
    }
  ],
  "blocks": [
    {
      "type": "tip_box",
      "name": "Tip Box",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Tip title",
          "default": "Clean Before Applying"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Tip content",
          "default": "<p>Ensure the area is clean and dry before applying the product for best absorption.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Application Tips",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
