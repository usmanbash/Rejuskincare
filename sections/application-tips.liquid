{% schema %}
{
  "name": "Application Tips",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image (optional)"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Application Tips"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "How to Apply for Best Results"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "label": "Top Padding (Desktop)",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "label": "Bottom Padding (Desktop)",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Top Padding (Mobile)",
      "min": 0,
      "max": 150,
      "step": 5,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Bottom Padding (Mobile)",
      "min": 0,
      "max": 150,
      "step": 5,
      "default": 40,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step Box",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Step Title",
          "default": "Step Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Step Content",
          "default": "<p>Describe the step details here.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Application Tips"
    }
  ]
}
{% endschema %}

{% style %}
#application-tips-section {
  background-color: {{ section.settings.background_color }};
  {% if section.settings.background_image != blank %}
    background-image: url({{ section.settings.background_image | image_url: 'master' }});
    background-size: cover;
    background-position: center;
  {% endif %}
  padding-top: {{ section.settings.padding_top_mobile }}px;
  padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
}

@media (min-width: 768px) {
  #application-tips-section {
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
  }
}

#application-tips-section .badge {
  display: inline-block;
  margin: 0 auto 20px;
  background: #E3DACF;
  color: #000;
  padding: 6px 18px;
  border-radius: 50px;
  text-align: center;
}

#application-tips-section .section-title {
  text-align: center;
  font-size: 28px;
  font-weight: 600;
  margin-bottom: 40px;
}

#application-tips-section .content-wrapper {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

@media (min-width: 768px) {
  #application-tips-section .content-wrapper {
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 40px;
  }
}

#application-tips-section .column-image {
  flex: 1;
  text-align: center;
}

#application-tips-section .column-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

#application-tips-section .step-box {
  background: #fff;
  border-radius: 10px;
  padding: 20px;
}

#application-tips-section .step-header {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 10px;
}

#application-tips-section .step-header img {
  width: 40px;
  height: 40px;
}
{% endstyle %}

<section id="application-tips-section">
  <div class="page-width">
    <div class="badge">{{ section.settings.badge_text }}</div>
    <h2 class="section-title">{{ section.settings.section_title }}</h2>
    <div class="content-wrapper">
      <div class="column-image">
        {% if section.settings.background_image %}
          <img src="{{ section.settings.background_image | image_url: '800x' }}" alt="">
        {% endif %}
      </div>
      <div class="column-content">
        {% for block in section.blocks %}
          <div class="step-box" {{ block.shopify_attributes }}>
            <div class="step-header">
              {% if block.settings.icon %}
                <img src="{{ block.settings.icon | image_url: '100x' }}" alt="">
              {% endif %}
              <h4>{{ block.settings.title }}</h4>
            </div>
            <div class="step-content">{{ block.settings.content }}</div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
